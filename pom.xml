                    <execution>
                        <goals>
                            <goal>build-info</goal>
                        </goals>
                        <id>build-info</id>
                    </execution>
                    <execution>
                        <goals>
                            <goal>repackage</goal>
                        </goals>
                        <id>repackage</id>
                    </execution>
                </executions>
                <groupId>org.springframework.boot</groupId>
            </plugin>
